# 면접 스케줄링 시스템 환경 변수 설정

# 애플리케이션 설정
APP_NAME=Interview Scheduler
APP_VERSION=2.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=8501
MAX_UPLOAD_SIZE=200

# 스케줄링 설정
DEFAULT_MAX_STAY_HOURS=12
DEFAULT_GLOBAL_GAP_MIN=5
DEFAULT_TIME_LIMIT_SEC=120
ENABLE_PERFORMANCE_OPTIMIZATION=true

# 보안 설정
SECRET_KEY=your-secret-key-here
ENABLE_AUTHENTICATION=false
ADMIN_PASSWORD=admin123

# 데이터베이스 설정 (향후 확장용)
DATABASE_URL=sqlite:///./data/scheduler.db
REDIS_URL=redis://localhost:6379

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PORT=9091
HEALTH_CHECK_ENDPOINT=/_health

# 로깅 설정
LOG_FILE_PATH=./log/app.log
LOG_ROTATION_SIZE=10MB
LOG_BACKUP_COUNT=5

# 성능 설정
ENABLE_PARALLEL_PROCESSING=true
MAX_WORKERS=4
CHUNK_SIZE_THRESHOLD=100
MEMORY_CLEANUP_INTERVAL=50

# 캐싱 설정
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE=1000

# 외부 서비스 연동 (향후 확장용)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# 백업 설정
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30 